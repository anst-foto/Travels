<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"

             x:Class="Travels.Desktop.Components.InputComponent"
             x:Name="Component">
    <UserControl.Styles>
        <StyleInclude Source="InputComponentStyles.axaml"/>
    </UserControl.Styles>

    <Grid ColumnDefinitions="*, 2*"
          DataContext="{Binding ElementName=Component}">
        <Label Classes="label"
               Content="{Binding Path=Label, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
               Target="{Binding ElementName=InputText}"
               Grid.Column="0"/>
        <TextBox x:Name="InputText"
                 Classes="text"
                 Text="{Binding Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 Grid.Column="1"/>
    </Grid>
</UserControl>

